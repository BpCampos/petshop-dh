<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous" />
    <title>Admin | Serviços</title>
  </head>
  <body>
    <main>
      <section class="d-flex flex-column align-items-center w-100">
        <h1>Serviços</h1>
        <a href="/admin/servicos/create"><button class="btn btn-info">Adicionar novo serviço</button></a>
        <table class="table table-dark table-striped table-hover w-75">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Nome</th>
              <th scope="col">Imagem</th>
              <th scope="col">Descrição</th>
              <th scope="col">Preço</th>
              <th scope="col" style="text-align: center">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% for(let servico of servicos) { %>
            <tr>
              <th scope="row"><%= servico.id %></th>
              <td><%= servico.nome %></td>
              <td><img style="width: 170px; height: 150px" src="<%= servico.imagem%> " alt="" /></td>
              <td><%= servico.descricao %></td>
              <td><%= servico.preco %></td>
              <td>
                <div class="d-flex">
                  <a href="/admin/servicos/<%= servico.id %>/edit"><button class="btn btn-primary">Editar</button></a>
                  <form action="/admin/servicos/<%= servico.id %>/delete?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">Excluir</button>
                  </form>
                </div>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </section>
    </main>
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"></script>
</html>
